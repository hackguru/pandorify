.popover {
  color: black;
  font-weight: normal;
  line-height: 1;
  cursor: auto;
  position: absolute;
  display: none;
  opacity: 0;
  background: url(<%= asset_path 'topbar-bg.png' %>);
  padding: 4px;
  border-radius: 3px;
  -webkit-transition: opacity 0.25s linear;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 0 1px #2F3540;
  margin-left: 5px;
  margin-top: -2px;
  transition: opacity 0.25s linear; }
  .popover.active {
    opacity: 1; z-index: 9;}
  .popover > .triangle {
    position: absolute;
    float: left;
    font-size: 0px;
    line-height: 0%;
    width: 0px;
    top: -13px;
    border-top: 7px solid transparent;
    border-left: 7px solid transparent;
    border-right: 7px solid transparent;
    border-bottom: 7px solid #c9c9c9;
  }
      .popover > .triangle:after {
        display: block;
        content: '';
        position: absolute;
        float: left;
        font-size: 0px;
        line-height: 0%;
        width: 0px;
        top: -4px;
        margin-left: -6px;
        border-top: 6px solid transparent;
        border-left: 6px solid transparent;
        border-right: 6px solid transparent;
        border-bottom: 6px solid #DDE0E1;
      }
  .popover > .header {
	/* I ADDED THIS LINE*/
	display: none;
    font-weight: bold;
    margin: 0;
    padding: 3px;
    height: 40px;
    color: white;
    background-color: black;
    background-image: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0.6)), color-stop(0.2, rgba(255, 255, 255, 0.4)), color-stop(0.5, rgba(255, 255, 255, 0.2)), color-stop(0.5, transparent), to(transparent) );
    text-align: center; }
  .popover > .content {
    background: #434C5D;
    width: 175px;
    overflow-x: hidden;
    overflow-y: auto;
    border-radius: 2px;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), inset 0 0 1px rgba(255, 255, 255,0.5);
    border: 1px solid #2F3541;
  }
    .popover .content li {
      position: relative;
      height: 24px;
      line-height: 24px;
      padding-left: 6px;
      box-shadow: 0 1px 0 rgba(255, 255, 255, 0.07);
      border-bottom: 1px solid rgba(46, 52, 64, 0.6);
      z-index: 9;
    }
      .popover .content ul li:last-child {
        border-bottom-color: transparent;
        box-shadow: none;
      }
      .popover .content li a,
      .popover .content li a:visited {
        color: #fff;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.4);
      }

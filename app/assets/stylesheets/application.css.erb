/* General */
div,
h1,
h2,
h3,
h4,
h5,
h6,
p,
a,
span,
textarea,
input,
button {
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  -webkit-text-stroke: 1px transparent;
  -moz-text-stroke: 1px transparent;
  text-stroke: 1px transparent;
}

a {
  text-decoration: none;
}

a:visited {
  color: auto;
}

.clear {
  clear: both;
}

.bold {
  font-weight: bold;
}

.lobster {
  font-family: 'Lobster', san-serif;
}

/* Layout */
body {
  background: url(<%= asset_path 'bg.png' %>) repeat;
}

/* HEADER */
header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 49px;
  z-index: 10;
  background: url(<%= asset_path 'dark-blue-bg.png' %>) repeat-x;
  
}
#header-container {
  height: inherit;
  background: url(<%= asset_path 'topbar-bg.png' %>) repeat-x;
  box-shadow: 0 1px 0 rgba(0, 0, 0, 0.15), 0 2px 1px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.4), inset 0 -1px 0 rgba(255, 255, 255, 0.2);
  border-radius: 4px 4px 0 0;
  text-align: center;
}

#player {
  display: inline-block;
  position: absolute;
  top: 4px;
  left: 233px;
  z-index: 2;
  background: url(<%= asset_path 'divider.png' %>) no-repeat;
  padding-left: 6px;
}

.logo {
  display: block;
  float: left;
  height: 100%;
  width: 115px;
  background: url(<%= asset_path 'logo-blue.png' %>) left center no-repeat;
  margin-left: 18px;
  text-indent: -9999px;
}

.logo_dark {
  display: block;
  height: 45px;
  width: 125px;
  margin: 100px auto 10px;
  background: url(<%= asset_path 'logo-dark.png' %>) center center no-repeat;
  text-indent: -9999px;
}

.logo_dark:hover {
  background-color: transparent;
}

/* contailner for toggle bottons */
.view-toggle {
  position: absolute;
  top: 15px;
  right: 16px;
  height: 22px;
  width: 53px;
  background: url( <%= asset_path 'view-toggle.png' %>) 0 0 no-repeat;
}

.view-toggle button {
  height: 22px;
  width: 26px;
  background: url( <%= asset_path 'view-toggle.png' %>) no-repeat;
  text-indent: -9999px;
  padding: 0;
  outline: none;
  border: none;
  box-shadow: none;
  cursor: pointer;
}

.view-toggle button.active {
  background: transparent !important;
}

.view-toggle button.detail {
  float: left;
  background-position: 0 -30px;
}

.view-toggle button.grid {
  float: right;
  background-position: -27px -30px;
}

.view-toggle button.detail:active {
  float: left;
  background-position: 0 -58px;
}

.view-toggle button.grid:active {
  float: right;
  background-position: -27px -58px;
}

/* Sidebar */
nav {
  position: fixed;
  top: 49px;
  left: 0;
  bottom: 0;
  width: 233px;
  overflow-y: auto;
  border-top: 1px solid rgba(0, 0, 0, 0.5);
  border-right: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 1px 0 0 rgba(255, 255, 255, 0.05);
}

nav section {
  padding: 18px 0 8px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1);
}

nav section:last-child {
  border: none;
  box-shadow: none;
}

nav h3 {
  color: #ECECEC;
  font-size: 16px;
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.4);
  padding: 0 0 6px 23px;
}

nav li {
  position: relative;
}

nav li a {
  display: block;
  line-height: 33px;
  color: #FFFFFF;
  font-size: 13px;
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.4);
  margin: 2px 0;
  padding-left: 20px;
}

nav li .delete,
nav li .confirm {
  display: inline-block;
  position: absolute;
  top: 4px;
  right: 9px;
  height: 20px;
  visibility: hidden;
  -webkit-transition: all 200ms ease-in-out;
  z-index: 9;
}

nav li .delete {
  opacity: 0.5;
  width: 20px;
  background: url(<%= asset_path 'misc-icons.png' %>) -9px -27px no-repeat;
}

nav li .delete:hover {
  opacity: 0.8;
  cursor: pointer;
}

nav li .confirm {
  display: block;
  height: 22px;
  line-height: 22px;
  border-radius: 10px;
  padding: 0 6px;
  background: -webkit-linear-gradient(top, #f26254, #b9392f) !important;
  color: #fff;
  font-size: 11px;
  font-weight: normal;
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.4);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.3), inset 0 -1px 0 rgba(255, 255, 255, 0.15);
  cursor: pointer;
}

nav li .confirm:active {
  box-shadow: inset 0 1px 0 rgba(0, 0, 0, 0.2), inset 0 2px 0 rgba(0, 0, 0, 0.05), 0 1px 0 rgba(0, 0, 0, 0.1);
}

nav li:hover .delete,
nav li.confirming .confirm {
  visibility: visible;
}

nav li.confirming .confirm {
  -webkit-transition-delay: 200ms;
}

nav li.confirming .delete {
  visibility: hidden;
}

nav li:not(.active):hover {
  background: rgba(0, 0, 0, 0.1);
}

nav li.active a,
nav li:not(.active) a:active {
  background: url(<%= asset_path 'active-bg.png' %>) 0 -5px repeat-x;
}

nav li.playlist input {
  outline: none;
  border: none;
  box-shadow: none;
  border-radius: 2px;
  height: 20px;
}

nav li.active a {
  font-weight: bolder;
}

nav .icon {
  display: inline-block;
  width: 18px;
  height: 18px;
  background: url(<%= asset_path 'sidebar-icons.png' %>) no-repeat;
  margin-right: 8px;
  vertical-align: text-bottom;
}

nav li.hot .icon {
  background-position: 0 2px;
}
nav li.hot.active .icon {
  background-position: -28px 2px;
}

nav li.match .icon {
  background-position: 0 -55px;
}
nav li.match.active .icon {
  background-position: -28px -55px;
}

nav li.shuffle .icon {
  background-position: 0 -111px;
}
nav li.shuffle.active .icon {
  background-position: -28px -111px;
}

nav li.playlist.queue .icon {
  background-position: 0 -168px;
}
nav li.playlist.queue.active .icon {
  background-position: -28px -168px;
}

nav li.playlist .icon {
  background-position: 0 -224px;
}
nav li.playlist.active .icon {
  background-position: -28px -224px;
}

nav li.playlist.add .icon {
  background-position: 0 -441px;
}

nav li.profile .icon {
  background-position: 0 -281px;
}
nav li.profile.active .icon {
  background-position: -28px -281px;
}

nav li.settings .icon {
  background-position: 0 -337px;
}
nav li.settings.active .icon {
  background-position: -28px -337px;
}

nav li.logout .icon {
  background-position: 0 -393px;
}
nav li.logout.active .icon {
  background-position: -28px -393px;
}

/* RIGHT PANE */
#right-pane {
  position: fixed;
  top: 0;
  left: 233px;
  right: 0;
  bottom: 0;
  z-index: 9;
  background: #FDFDFE;
  box-shadow: -7px 0 3px -3px rgba(32, 32, 32, 0.03);
  border-bottom-left-radius: 4px;
}

/* Right Pane: Section */
#right-pane > section {
  position: fixed !important;
  height: auto !important;
  top: 50px;
  left: inherit;
  right: inherit;
  bottom: 0;
  overflow-y: auto;
  overflow-x: hidden;
}

/* Scrollbars */
::-webkit-scrollbar {
  height: 4px;
  width: 4px;
  border-radius: 10px;
}

::-webkit-scrollbar-thumb {
  border-radius: 40px;
  background: #e0e0e0;
}

#sidebar::-webkit-scrollbar-thumb {
  background: #C9C9CB;
}

::-webkit-scrollbar-track {
  background: transparent;
  -webkit-transition: all 500ms ease;
  margin: 7px;
}

/* General */
div,
h1,
h2,
h3,
h4,
h5,
h6,
p,
a,
span,
textarea,
input,
button {
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  -webkit-text-stroke: 1px transparent;
  -moz-text-stroke: 1px transparent;
  text-stroke: 1px transparent;
}

a {
  text-decoration: none;
}

.clear {
  clear: both;
}

.bold {
  font-weight: bold;
}

.lobster {
  font-family: 'Lobster', san-serif;
}

/* Layout */
body {
  background: url(<%= asset_path 'bg.png' %>) repeat;
}

/* HEADER */
header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 49px;
  background: url(<%= asset_path 'dark-blue-bg.png' %>) repeat-x;
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1);
}

.logo {
  display: block;
  float: left;
  height: 100%;
  width: 115px;
  background: url(<%= asset_path 'logo.png' %>) left center no-repeat;
  margin-left: 18px;
  text-indent: -9999px;
}

.logo_dark {
  display: block;
  height: 45px;
  width: 125px;
  margin: 100px auto 10px;
  background: url(<%= asset_path 'logo-dark.png' %>) center center no-repeat;
  text-indent: -9999px;
}

/* Sidebar */
nav {
  position: fixed;
  top: 49px;
  left: 0;
  bottom: 0;
  width: 233px;
  overflow-y: auto;
  border-top: 1px solid rgba(0, 0, 0, 0.5);
  border-right: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 1px 0 0 rgba(255, 255, 255, 0.05);
}

nav section {
  padding: 18px 0 8px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1);
}

nav section:last-child {
  border: none;
  box-shadow: none;
}

nav h3 {
  color: #ECECEC;
  font-size: 16px;
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.4);
  padding: 0 0 6px 23px;
}

nav li a {
  display: block;
  line-height: 33px;
  color: #FFFFFF;
  font-size: 13px;
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.4);
  margin: 2px 0;
  padding-left: 20px;
}

nav li:not(.active):hover {
  background: rgba(0, 0, 0, 0.1);
}

nav li.active,
nav li:not(.active):active {
  background: url(<%= asset_path 'active-bg.png' %>) 0 -5px repeat-x;
}

nav li.playlist input {
  outline: none;
  border: none;
  box-shadow: none;
  border-radius: 2px;
  height: 20px;
}

nav li.active a {
  font-weight: bolder;
}

nav .icon {
  display: inline-block;
  width: 18px;
  height: 18px;
  background: url(<%= asset_path 'sidebar-icons.png' %>) no-repeat;
  margin-right: 8px;
  vertical-align: text-bottom;
}

nav li.hot .icon {
  background-position: 0 2px;
}
nav li.hot.active .icon {
  background-position: -28px 2px;
}

nav li.match .icon {
  background-position: 0 -55px;
}
nav li.match.active .icon {
  background-position: -28px -55px;
}

nav li.shuffle .icon {
  background-position: 0 -111px;
}
nav li.shuffle.active .icon {
  background-position: -28px -111px;
}

nav li.playlist.queue .icon {
  background-position: 0 -168px;
}
nav li.playlist.queue.active .icon {
  background-position: -28px -168px;
}

nav li.playlist .icon {
  background-position: 0 -224px;
}
nav li.playlist.active .icon {
  background-position: -28px -224px;
}

nav li.playlist.add .icon {
  background-position: 0 -441px;
}

nav li.profile .icon {
  background-position: 0 -281px;
}
nav li.profile.active .icon {
  background-position: -28px -281px;
}

nav li.settings .icon {
  background-position: 0 -337px;
}
nav li.settings.active .icon {
  background-position: -28px -337px;
}

nav li.logout .icon {
  background-position: 0 -393px;
}
nav li.logout.active .icon {
  background-position: -28px -393px;
}

/* RIGHT PANE */
#right-pane {
  position: fixed;
  top: 0;
  left: 233px;
  right: 0;
  bottom: 0;
  z-index: 9;
  background: #FDFDFE;
  box-shadow: -7px 0 3px -3px rgba(32, 32, 32, 0.03);
  border-bottom-left-radius: 4px;
}

/* Right Pane: Header */
#header-right-container {
  position: fixed;
  top: 0;
  left: inherit !important;
  right: inherit !important;
  height: 49px;
  z-index: 10;
  background: url(<%= asset_path 'dark-blue-bg.png' %>) repeat-x;
}

#header-right {
  height: inherit;
  background: url(<%= asset_path 'topbar-bg.png' %>) repeat-x;
  box-shadow: 0 1px 0 rgba(0, 0, 0, 0.15), 0 2px 1px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.4), inset 0 -1px 0 rgba(255, 255, 255, 0.2);
  border-top-left-radius: 4px;
  text-align: center;
}

#player {
  padding-top:4px;
}

/* contailner for toggle bottons */
.view-toggle {
	float: right;
	position: relative;
	top: -35px;
	padding-right: 50px;
}

.view-toggle a{
	height: 35px;
	width: 40px;
}

/* Right Pane: Section */
#right-pane > section {
  position: fixed !important;
  height: auto !important;
  top: 50px;
  left: inherit;
  right: inherit;
  bottom: 0;
  overflow-y: auto;
  overflow-x: hidden;
}

/* Scrollbars */
::-webkit-scrollbar {
  height: 4px;
  width: 4px;
  border-radius: 10px;
}

::-webkit-scrollbar-thumb {
  border-radius: 40px;
  background: #e0e0e0;
}

#sidebar::-webkit-scrollbar-thumb {
  background: #C9C9CB;
}

::-webkit-scrollbar-track {
  background: transparent;
  -webkit-transition: all 500ms ease;
  margin: 7px;
}

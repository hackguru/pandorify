body.tour {
  background: url(<%= asset_path 'grey-bg.png' %>) repeat;
}

.container {
  position: relative;
  max-width: 720px;
  margin: 0 auto;
}

.tour section {
  position: relative;
  padding: 20px 40px;
  background: url(<%= asset_path 'bg.png' %>) repeat;
  box-shadow: 0 0 1px rgba(0, 0, 0, 0.2), 0 1px 0 rgba(0, 0, 0, 0.1);
  border-radius: 3px;
  color: #fff;
  overflow: hidden;
}

.tour h2 {
  font-size: 32px;
  margin: 0;
}

.tour p {
  font-size: 20px;
  font-weight: normal;
  margin: 10px 0;
}
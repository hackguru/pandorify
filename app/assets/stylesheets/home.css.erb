body.tour {
  background: url(<%= asset_path 'grey-bg.png' %>) repeat;
}

.container {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -150px;
  margin-left: -250px;
  height: 100px;
  width: 500px;
  text-align: center;
}

.tour section {
  position: relative;
  height: 400px;
  padding: 30px;
  background: url(<%= asset_path 'bg.png' %>) repeat;
  box-shadow: inset 0 0 1px rgba(255, 255, 255, 0.6), inset 0 1px 0 rgba(255, 255, 255, 0.2);
  border: 1px solid #434C5D;
  border-radius: 3px;
  color: #fff;
}

.tour h2 {
  font-size: 36px;
  margin: 0;
  text-align: center;
  margin-bottom: 120px;
  text-shadow: 0 1px 0 #000;
}

.tour p {
  font-size: 20px;
  font-weight: normal;
  margin: 10px 0;
  text-align: center;
}

.tour .button {
  display: inline-block;
  margin: 8px 0 0 10px; 
  background-image: -webkit-linear-gradient(top, #8498C1, #596DA1 100%);
  background-image: -moz-linear-gradient(top, #8498C1, #596DA1 100%);
  background-image: -o-linear-gradient(top, #8498C1, #596DA1 100%);
  background-image: -ms-linear-gradient(top, #8498C1, #596DA1 100%);
  background-image: linear-gradient(top, #8498C1, #596DA1 100%);
  border-radius: 3px;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.3), inset 0 -1px 0 rgba(255, 255, 255, 0.1);
  border: 1px solid #2F437D;
  padding: 0 10px;
  height: 30px;
  line-height: 32px;
  font-size: 13px;
  font-weight: normal;
  cursor: pointer;
  color: white;
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.6);
  margin: 0;
}

.tour .button:active {
  border-top-color: #222D4D;
  box-shadow: inset 0 1px 0 rgba(0, 0, 0, 0.1), inset 0 -1px 0 rgba(0, 0, 0, 0.1);
}

/* Tour: Intro */
.tour .intro .albums {
  position: absolute; 
  top: 100px; 
  left: -5px;
  right: -5px;
  height: 140px;
  background: #fafafa url(<%= asset_path 'tour/intro.png' %>) center center;
  border: 1px solid #202833;
  border-left: none;
  border-right: none;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1), inset 0 0 1px #fff;
}
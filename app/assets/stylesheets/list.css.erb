#song_view[type="detail"] {
  background: url(<%= asset_path 'list/bg.png' %>) repeat;
}

.list-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  overflow-y: auto;
  background: url(<%= asset_path 'list/bg.png' %>) repeat;
}

.row {
  position: relative;
  height: 42px;
  line-height: 42px;
}

.row .dynamic {
  position: absolute;
  left: 95px;
  right: 300px;
  height: 100%;
}

.row .static {
  position: absolute;
  right: 0;
  width: 300px;
  height: 100%;
  line-height: 21px;
}

.row .dynamic div {
  float: left;
  height: 100%;
  margin: 0;
  text-indent: 15px;
  color: #3a465c;
  font-size: 14px;
  box-shadow: 1px 0 0 #E9EAED, 2px 0 0 #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.row .song {
  width: 40%;
}

.row .artist {
  width: 30%;
}
.row .album {
  width: 30%;
}

.row .friends {
  float: left;
  width: 100%;
  text-align: center;
  text-indent: 0;
  box-shadow: 1px 0 0 #E9EAED, 2px 0 0 #fff;
}

.row .thumbs {
  text-align: right;
  padding-left: 6px;	
  overflow: visible;
  white-space: nowrap;
}

.row .thumbs li {
  position: relative;
  display: inline-block;
  margin: 4px 2px 0 0;
  text-indent: 0;
  line-height: 0;
}

.row .thumbs li:last-child {
  margin-right: 0;
}

.row .thumbs img {
  height: 33px;
  width: 33px;
  box-shadow: 0 0 1px rgba(0, 0, 0, 0.2), 0 1px 0 #fff;
  border-radius: 2px;
}

.row .thumbs li .popover {
  display: block;
  position: absolute;
  top: 40px;
  left: -75px;
  margin: 0;
  z-index: 9;
  opacity: 1;
  text-align: center;
  visibility: hidden;
}

.row .thumbs li .popover .triangle {
  left: 50%;
  margin-left: -7px;
}

.row .thumbs li:hover .popover {
  visibility: visible;
  -webkit-transition: visibility 150ms ease-in-out;
  -webkit-transition-delay: 400ms;
  -moz-transition: visibility 150ms ease-in-out;
  -moz-transition-delay: 400ms;
  -o-transition: visibility 150ms ease-in-out;
  -o-transition-delay: 400ms;
  -ms-transition: visibility 150ms ease-in-out;
  -ms-transition-delay: 400ms;
  transition: visibility 150ms ease-in-out;
  transition-delay: 400ms;
}

.row .thumbs li .popover p {
  color: #fff;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.6);
  font-size: 13px;
}

.row .thumbs li .popover .count {
  font-size: 11px;
  line-height: 16px;
  margin-bottom: 3px;
}

.row .thumbs li .popover img {
  width: 167px;
  height: auto;
  margin: 4px 4px 2px;
  box-shadow: 0 0 1px rgba(255, 255, 255, 0.8);
}

.row .actions {
  float: left;
  width: 84px;
  box-shadow: none;
  margin: 0 10px 0 15px;
  padding: 4px 0;
  box-shadow: 1px 0 0 #E9EAED, 2px 0 0 #fff;
}

.row .actions a {
  float: left;
}

.row .actions .play {
  display: inline-block;
  height: 34px;
  width: 34px;
  background: url(<%= asset_path 'list/buttons.png' %>) -8px -8px no-repeat;
}

.row .actions .play:active {
  background-position: -8px -69px;
}

.row .actions .add {
  display: inline-block;
  height: 28px;
  width: 28px;
  margin: 4px 0 0 6px;
  background: url(<%= asset_path 'list/buttons.png' %>) -72px -11px no-repeat;
}

.row .actions .add:active {
  background-position: -72px -73px;
}
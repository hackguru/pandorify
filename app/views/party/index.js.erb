$('#song_view').html("<%= escape_javascript(render 'song/songs', :songs => @songs, :type => @type) %>");
// $('#song_view').prepend("<%= escape_javascript(render 'tokenizer') %>");
$('#song_view').attr("type","<%=@type%>");
$('#song_view').attr("content",'hot');
$('#song_view').attr("content_id","");
$('body').removeClass('loading');
nextPage = parseInt('<%= @page %>')+1;
beforeTime = '<%= @before %>';
view_type = '<%=@type%>';
$(document).unbind('scroll', unlimited_scroll);
$(document).endlessScroll({
  bottomPixels: 400,
  fireOnce: true,
  fireDelay: 500,
  ceaseFire: function(){
    return $('#cease_fire_on_scroll').attr('value') == 'true';
  },
  callback: function(){
    $(document).unbind('scroll', unlimited_scroll);
    $.get("<%= party_index_path %>", { type: view_type, page: nextPage, before: beforeTime, tempo_min: <%= @tempo_min %>, tempo_max: <%= @tempo_max %>, danceability_min: <%= @danceability_min %>, danceability_max: <%= @danceability_max %>, energy_min: <%= @energy_min %>, energy_max: <%= @energy_max %>, loudness_min: <%= @loudness_min %>, loudness_max: <%= @loudness_max %>} );
    $('body').addClass('appending');
  }
});
